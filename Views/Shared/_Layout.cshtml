@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - GGSTORE</title>

    <!-- Bootstrap CSS (solo uno para no duplicar) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Google Fonts Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    
    <!-- Estilos locales -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pg1.styles.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        @{
            var usuario = Context.Session.GetString("Usuario");
        }
        <nav class="navbar navbar-expand-lg navbar-light bg-ggstore-blue py-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index">GGSTORE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Nosotros">Sobre Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Productos" asp-action="Index">Catálogo</a>
                        </li>
                        <!-- Aquí agregamos Contáctanos -->
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Contacto" asp-action="Index">Contáctanos</a>
                        </li>
                        <!-- Aquí agregamos Recomendados solo si el usuario está logueado -->
                        @if (!string.IsNullOrEmpty(usuario))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Recomendacion" asp-action="Index">Recomendados</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (string.IsNullOrEmpty(usuario))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Register" asp-action="Registrar">Registrarse</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Login" asp-action="Ingresar">Iniciar Sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Carrito" asp-action="Index" title="Carrito">
                                    <i class="bi bi-cart3"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link text-white">Bienvenido, @usuario</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Login" asp-action="CerrarSesion" method="post" class="d-inline" id="logoutForm">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link nav-link text-white p-0" style="cursor:pointer;">
                                        Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2025 - GGSTORE - <a asp-controller="Home" asp-action="Nosotros">Sobre Nosotros</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
